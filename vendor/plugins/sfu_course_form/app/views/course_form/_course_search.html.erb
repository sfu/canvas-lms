<a name="search"></a>
<div class="control-group" id="enroll_me_div">
  <%= label_tag "Search Courses", "Search Courses", :class => "control-label" %>
  <div class="controls">
    <select name="term_select" id="term_select">
      <%
         terms = []
         @terms.each_with_index do |term, index|
           terms.push [term.name, term.sis_source_id] unless index > 3
         end
      %>
      <%= options_for_select(terms, @current_term.sis_source_id) %>
    </select>
    <%= text_field_tag "course_search", nil, :class => "input-xlarge", :required => false, :placeholder => "e.g. MATH150 D100" %>
    <input type="hidden" id="course_list">
    <br><br>
    <div id="course_search_list"></div>
  </div>
</div>
<div id="error"></div>
