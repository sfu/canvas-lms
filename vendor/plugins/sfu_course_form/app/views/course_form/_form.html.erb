<%
  js_bundle :course_request_form, :plugin => :sfu_course_form
%>

<h1>Start a New Course</h1>
  <% form_tag({:controller => "course_form" ,:action => "create"}, :class => "bootstrap-form form-horizontal") do -%>
  <p class="warning"><strong>You must be a Faculty Member or Course Designer to start a new course.</strong><br />If you are a student looking to enroll in a course, please contact the instructor. Do not use this form.</p>
  <div class="control-group">
    <%= label_tag "username", "Courses Taught By", :class => "control-label" %>
    <div class="controls">
      <%= text_field_tag "username", nil, :class => "input-large", :value => @sfuid, :required => true, :placeholder => "SFU Computing ID" %>
      <button type="button" id="update_course_list" class="btn">Update</button>
      <div class="help">Enter the SFU Computing ID of the instructor teaching the courses to be created</div>
    </div>
  </div>

    <div class="control-group" id="enroll_me_div">
      <%= label_tag "Enroll Me", "Enroll Me", :class => "control-label" %>
      <div class="controls">
        <label class="checkbox">
          <%=  check_box_tag "enroll_me", @sfuid, false, :disabled => true  %>
          <div>You will be enrolled as a Teacher to the selected courses</div>
        </label>
      </div>
    </div>

   <div class="control-group">
     <%= label_tag "Courses you are teaching", "Course List", :class => "control-label" %>
      <div class="controls" id="course_list"></div>
   </div>

    <%= render :partial => 'course_search' %>

    <div class="control-group">
      <%= label_tag "Cross-list", "Cross-List Courses", :class => "control-label" %>
      <div class="controls">
        <label class="checkbox">
          <%=  check_box_tag "cross_list", true, false, :disabled => true %>
          <div>Cross-listing will place all the selected courses into a single course container</div>
          <div id="cross-list-course"></div>
        </label>
      </div>
    </div>
<hr>
  <div class="button-container" id="button-container">
    <%= submit_tag "Create Courses", :id => "create_course_btn" ,:class=> "btn btn-primary", :disabled => true %>
  </div>
<% end %>
